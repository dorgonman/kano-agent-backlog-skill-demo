{
	"servers": {
		"@upstash/context7-mcp": {
			"command": "npx",
			"args": [
				"@upstash/context7-mcp@1.0.31"
			],
			"env": {
				"CONTEXT7_API_KEY": "${input:CONTEXT7_API_KEY}"
			},
			"type": "stdio"
		}
	},
	"inputs": [
		{
			"type": "promptString",
			"id": "CONTEXT7_API_KEY",
			"description": "API key for authentication",
			"password": true
		}
	]
}