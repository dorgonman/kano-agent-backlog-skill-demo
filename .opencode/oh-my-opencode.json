{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "agents": {
    "Sisyphus": {
      "model": "openai/gpt-5.2-high",
      "comment": "Main agent using OpenAI GPT 5.2 with high reasoning mode"
    },
    "librarian": {
      "model": "github-copilot/claude-sonnet-4",
      "comment": "Documentation search and code exploration using GitHub Copilot Claude Sonnet 4"
    },
    "explore": {
      "model": "github-copilot/gpt-4o-mini",
      "comment": "Fast codebase exploration using GitHub Copilot GPT-4o Mini"
    },
    "oracle": {
      "model": "openai/gpt-5.2-xhigh",
      "comment": "Architecture decisions and debugging using OpenAI GPT 5.2 with extra-high reasoning"
    },
    "frontend-ui-ux-engineer": {
      "model": "google/antigravity-gemini-3-pro-high",
      "comment": "Frontend development and UI/UX design using Google Gemini 3 Pro"
    },
    "document-writer": {
      "model": "github-copilot/gpt-4o",
      "comment": "Technical documentation writing using GitHub Copilot GPT-4o"
    },
    "multimodal-looker": {
      "model": "google/gemini-3-flash-preview",
      "comment": "Multimodal analysis (images, PDFs) using Google Gemini 3 Flash"
    }
  },
  "google_auth": true,
  "lsp": {
    "pyright": {
      "command": [
        "pyright-langserver",
        "--stdio"
      ],
      "extensions": [
        ".py",
        ".pyi"
      ],
      "priority": 10,
      "comment": "Python LSP for type checking and IntelliSense"
    },
    "typescript-language-server": {
      "command": [
        "typescript-language-server",
        "--stdio"
      ],
      "extensions": [
        ".ts",
        ".tsx",
        ".js",
        ".jsx"
      ],
      "priority": 10,
      "comment": "TypeScript/JavaScript LSP for code analysis"
    },
    "vscode-json-language-server": {
      "command": [
        "vscode-json-language-server",
        "--stdio"
      ],
      "extensions": [
        ".json",
        ".jsonc"
      ],
      "priority": 10,
      "comment": "JSON LSP for configuration files"
    },
    "yaml-language-server": {
      "command": [
        "yaml-language-server",
        "--stdio"
      ],
      "extensions": [
        ".yaml",
        ".yml"
      ],
      "priority": 10,
      "comment": "YAML LSP for configuration files"
    },
    "marksman": {
      "command": [
        "marksman",
        "server"
      ],
      "extensions": [
        ".md"
      ],
      "priority": 10,
      "comment": "Markdown LSP for documentation"
    }
  }
}