{
  "sisyphus_agent": {  
    "disabled": false,  
    "planner_enabled": true,  
    "replace_plan": true  
  },  

  "agents": {  
    /* Main orchestrator - now using GPT-5.2 */  
    "Sisyphus": {  
      "model": "github-copilot/claude-opus-4.5",  
      "temperature": 0.1,  
      "thinking": {  
        "type": "enabled",  
        "budgetTokens": 64000  
      }  
    },
  
    /* Architecture advisor */  
    "oracle": {  
      "model": "openai/gpt-5.2",  
      "temperature": 0.1,  
      "reasoningEffort": "medium",  
      "textVerbosity": "high"  
    },  
  
    /* Documentation researcher */  
    "librarian": {  
      "model": "opencode/glm-4-7-free",  
      "temperature": 0.1  
    },  
  
    /* Code explorer */  
    "explore": {  
      "model": "opencode/grok-code",  
      "temperature": 0.1  
    },  
  
    /* Frontend engineer */  
    "frontend-ui-ux-engineer": {  
      "model": "google/gemini-3-pro-preview",  
      "temperature": 0.1  
    },  
  
    /* Technical writer */  
    "document-writer": {  
      "model": "google/gemini-3-pro-preview",  
      "temperature": 0.1  
    },  
  
    /* Multimodal analyzer */  
    "multimodal-looker": {  
      "model": "google/gemini-3-flash",  
      "temperature": 0.1  
    },  
  
    /* Strategic planner */  
    "Prometheus (Planner)": {  
      "model": "anthropic/claude-opus-4-5",  
      "temperature": 0.1,  
      "thinking": {  
        "type": "enabled",  
        "budgetTokens": 32000  
      }  
    },  
  
    /* Plan consultant */  
    "Metis (Plan Consultant)": {  
      "model": "anthropic/claude-sonnet-4-5",  
      "temperature": 0.1  
    },  
  
    /* Plan reviewer */  
    "Momus (Plan Reviewer)": {  
      "model": "anthropic/claude-sonnet-4-5",  
      "temperature": 0.1  
    },  
  
    /* Default build agent */  
    "build": {  
      "model": "anthropic/claude-opus-4-5",  
      "temperature": 0.1  
    },  
  
    /* Default plan agent */  
    "plan": {  
      "model": "anthropic/claude-opus-4-5",  
      "temperature": 0.1  
    }  
  },
  "disabled_hooks": [],
  "disabled_mcps": [],
  "lsp": {
    "pyright": {
      "disabled": false,
      "extensions": [
        ".py",
        ".pyi"
      ],
      "priority": 10
    },
    "typescript": {
      "disabled": false,
      "extensions": [
        ".ts",
        ".tsx",
        ".js",
        ".jsx",
        ".mjs",
        ".cjs",
        ".mts",
        ".cts"
      ],
      "priority": 10
    }
  },
  "experimental": {
    "preemptive_compaction_threshold": 0.85,
    "truncate_all_tool_outputs": false,
    "aggressive_truncation": false,
    "auto_resume": true,
    "dcp_for_compaction": false
  }
}
